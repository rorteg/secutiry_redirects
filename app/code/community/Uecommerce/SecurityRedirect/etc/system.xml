<?xml version="1.0" ?>
<config>
    <sections>
        <dev>
            <groups>
                <uecommerce_securityredirect translate="label">
                    <label>Security Redirect</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment><![CDATA[<a href="http://www.uecommerce.com.br" target="_blank"><img title="Uecommerce" alt="Uecommerce" src="http://www.uecommerce.com.br/uecommerce.php"/></a></span>]]></comment>
                    <fields>
                        <version translate="label">
                            <label>Version</label>
                            <frontend_type>select</frontend_type>
                            <frontend_model>Uecommerce_SecurityRedirect_Block_Adminhtml_Version</frontend_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </version>
                        <active translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <allow_ips translate="label comment">
                            <label>Allowed IPs (comma separated)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </allow_ips>
                        <url_paths translate="label">
                            <label>Redirect to URI</label>
                            <frontend_model>uecommerce_securityredirect/adminhtml_urlpath</frontend_model>
                            <backend_model>uecommerce_securityredirect/adminhtml_system_config_backend_serialized</backend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <can_be_empty>0</can_be_empty>
                        </url_paths>
                    </fields>
                </uecommerce_securityredirect>
            </groups>
        </dev>
    </sections>
</config>